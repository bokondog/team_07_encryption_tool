<Window x:Class="TestCryption.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCryption"
        mc:Ignorable="d"
        Title="Loading..."
        Height="300" Width="500"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Use brushes similar to the main window for consistency -->
        <SolidColorBrush x:Key="SplashBackgroundBrush" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="SplashAccentBrush" Color="#FF00AADE"/>
        <!-- Cyber Blue -->
        <SolidColorBrush x:Key="SplashTextBrush" Color="#FFCCCCCC"/>

        <!-- Animation Storyboard -->
        <Storyboard x:Key="SplashAnimation">
            <!-- Icon Fade In & Pulse -->
            <DoubleAnimation Storyboard.TargetName="LockIcon"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.8" BeginTime="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetName="LockIcon"
                             Storyboard.TargetProperty="(UIElement.Opacity)"
                             From="0.7" To="1.0" Duration="0:0:0.6" BeginTime="0:0:1.0"
                             AutoReverse="True" RepeatBehavior="Forever"/>

            <!-- Text Fade In -->
            <DoubleAnimation Storyboard.TargetName="LoadingText"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.8" BeginTime="0:0:0.5"/>

            <!-- Optional: Subtle background element animation (e.g., binary trail) -->
            <DoubleAnimation Storyboard.TargetName="BinaryTrail"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="0.15" Duration="0:0:1.5" BeginTime="0:0:0.7"
                             AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>

