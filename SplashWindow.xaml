                  Stretch="Uniform" Width="80" Height="80"
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  Opacity="0"/>
            <!-- Start invisible for fade-in -->

            <!-- Loading Text -->
            <TextBlock x:Name="LoadingText" Grid.Row="1"
                       Text="Initializing Security Subsystems..."
                       Foreground="{StaticResource SplashTextBrush}"
                       FontSize="16" HorizontalAlignment="Center"
                       Opacity="0"/>
            <!-- Start invisible for fade-in -->
        </Grid>
    </Border>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource SplashAnimation}"/>
        </EventTrigger>
    </Window.Triggers>
</Window>
